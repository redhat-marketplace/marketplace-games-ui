{
  "name": "marketplace-games-ui",
  "version": "1.0.0",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "ci": "npm run format:diff && yarn lint",
    "clean": "rimraf node_modules",
    "reset": "yarn cache clean && yarn clean && yarn install && yarn build",
    "format": "prettier --write '**/*.{svelte,js,md}'",
    "format:diff": "prettier --list-different '**/*.{svelte,js,md}'",
    "lint": "eslint src",
    "test": "yarn test:unit",
    "test:unit": "cross-env BABEL_ENV=test jest"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/svelte": "^3.0.0",
    "babel-jest": "^26.5.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "jest": "^26.5.0",
    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^1.4.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-jester": "^1.1.5"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0",
    "yarn": "^1.22.10"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{svelte,js}"
    ],
    "coverageReporters": ["text", "html"],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "svelte-jester"
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  }
}
