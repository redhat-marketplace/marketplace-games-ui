{
  "name": "marketplace-games-ui",
  "version": "1.0.0",
  "scripts": {
    "build": "lerna run build --stream --prefix --npm-client yarn",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "ci": "npm run format:diff && yarn lint",
    "clean": "rimraf node_modules",
    "reset": "yarn cache clean && yarn clean && yarn install && yarn build",
    "format": "prettier --write '**/*.{svelte,js,md}'",
    "format:diff": "prettier --list-different '**/*.{svelte,js,md}'",
    "lint": "eslint src",
    "test": "yarn test:unit",
    "test:unit": "cross-env BABEL_ENV=test jest"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "jest": "^26.4.2",
    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^1.4.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0",
    "yarn": "^1.22.10"
  }
}
